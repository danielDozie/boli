---
import "../styles/globals.css";
import { ClientRouter } from "astro:transitions";
import { Providers } from "../components/Providers";
import { Navbar } from "../components/Navbar";
import { Ticker } from "../components/Ticker";
import { Footer } from "../components/Footer";

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body
    class="min-h-screen bg-background font-['Outfit',sans-serif] antialiased"
  >
    <Providers client:load>
      <div
        class="min-h-screen bg-brand-surface dark:bg-brand-dark transition-colors duration-300"
      >
        <Navbar client:load currentPath={currentPath} transition:persist />
        <Ticker client:load transition:persist />

        <slot />

        <Footer client:load transition:persist />
      </div>
    </Providers>
  </body>
</html>
